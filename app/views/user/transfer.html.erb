<div class="container " style="width: 500px ;margin-top: 200px" >
  <div class="card">

    <h5 class="card-header indigo white-text text-center py-4">
      <strong>Transfer</strong>
    </h5>

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">

      <!-- Form -->
      <form class="text-center" style="color: #757575;" action="#!">

        <div class="md-form">
          <input type="text" id="accountNumber" class="form-control">
          <label for="accountNumber">Account Number To Transfer</label>
        </div>

        <div class="md-form">
          <input type="number" id="depositAmount" class="form-control">
          <label for="depositAmount">Amount to be transferred...</label>
        </div>

        <!-- Deposit button -->
        <button class="btn btn-outline-indigo btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Transfer</button>

      </form>
      <!-- Form -->

    </div>

  </div>
</div>

