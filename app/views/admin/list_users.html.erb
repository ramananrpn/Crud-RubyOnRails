<div class="table-responsive text-nowrap container">
  <table class="table table-hover">
    <thead class="black white-text">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Acc Num</th>
      <th scope="col">Name</th>
      <th scope="col">Acc Type</th>
      <th scope="col">Balance</th>
    </tr>
    </thead>
    <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= account.account_number %></td>
        <td><%= account.name %></td>
        <td><%= account.account_type %></td>
        <td><%= account.balance %></td>
        <td class="red-text"><%= link_to 'Delete', "/admin/#{account.id}" , method: :delete, data: { confirm: 'Are you sure , delete the account ?' }  ,class: 'red-text'%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
